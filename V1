#include <SoftwareSerial9.h>
#include <Wire.h>
int sp_L;
int sp_R;

#define MOSI 11 // to arduino pin 11 and ground one side
#define MISO 12
#define TX MOSI
#define RX MISO
#define LEDPIN 13

int OPEN = 5;

SoftwareSerial9 mySerial(RX, TX);

void setup() {
  Wire.begin(8);
  Wire.onReceive(receiveEvent);
  mySerial.begin(26518);
  Serial.begin(115200);
  pinMode(OPEN, OUTPUT);
  digitalWrite(OPEN, HIGH);
  delay(1000);
  digitalWrite(OPEN, LOW);
  Serial.println("NOW OPEN");
}

char c = ' ';
signed int sp = 0;

void loop() {

  Serial.println(c);
  if (c == ' ') {
    sp = 0;
  } else if (c == 'q') {
    sp -= 10;
  } else if (c == 'w') {
    sp += 10;
  } else if (c == '2') {
    sp += 100;
  }  else if (c == '1') {
    sp -= 100;
  }
  Serial.print("speed ");
  Serial.println(sp);
  Serial.print(" low byte ");
  Serial.print((sp & 0xFF), HEX);
  Serial.print(" high byte ");
  Serial.println((sp >> 8) & 0xFF, HEX);
  do {
    int i = random(-1, 3);
    mySerial.write9(256);
    mySerial.write9(sp & 0xFF);
    mySerial.write9((sp >> 8) & 0xFF);
    mySerial.write9(sp & 0xFF);
    mySerial.write9((sp >> 8) & 0xFF);
    mySerial.write9(85);
    mySerial.write9(85 + i);
    mySerial.write9(85 + i);
    delayMicroseconds(300);
  } while (!Serial.available());
  c = Serial.read();
}

void receiveEvent(int howMany)
{
  int tmp_R = Wire.read();
  int tmp_L = Wire.read();
  byte Ref = Wire.read();

  if (Ref == 0xff)
  {
    sp_L = tmp_L;
    sp_R = tmp_R;
  }
  Serial.print(sp_R);
  Serial.print("\t");
  Serial.println(sp_L);
  //    Serial.print("\t");
  //    Serial.println(Ref);

}
